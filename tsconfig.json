{
  "compilerOptions": {
    "declaration": true,
    "rootDirs": ["src", "stories"],
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "files": ["src/index.ts"]
}
